<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!--Nagib-->
    <servlet>
        <servlet-name>UserCartControl</servlet-name>
        <servlet-class>com.deal.servlet.UserCartControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCart</servlet-name>
        <servlet-class>com.deal.servlet.UpdateCart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserCartControl</servlet-name>
        <url-pattern>/userCartControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCart</servlet-name>
        <url-pattern>/UpdateCart</url-pattern>
    </servlet-mapping>
    <!---->
    <!--Marzouk-->
    <servlet>
        <servlet-name>AdminControl</servlet-name>
        <servlet-class>com.deal.servlet.AdminControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminControl</servlet-name>
        <url-pattern>/administration</url-pattern>
    </servlet-mapping>
    <!--*************************** sub-servlets ***************************-->
    <servlet>
        <servlet-name>ProductsPanelControl</servlet-name>
        <servlet-class>com.deal.servlet.ProductsPanelControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductsPanelControl</servlet-name>
        <url-pattern>/administration/products</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CustomersPanelControl</servlet-name>
        <servlet-class>com.deal.servlet.CustomersPanelControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomersPanelControl</servlet-name>
        <url-pattern>/administration/customers</url-pattern>
    </servlet-mapping>
    <!--********************************************************************-->
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <!---->
    <!--Mokhtar-->
    <servlet>
        <servlet-name>UserProfile</servlet-name>
        <servlet-class>com.deal.servlet.UserProfileControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserProfile</servlet-name>
        <url-pattern>/userProfile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HeaderFooterServlet</servlet-name>
        <servlet-class>com.deal.servlet.HeaderFooterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HeaderFooterServlet</servlet-name>
        <url-pattern>/headerFooterServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>paginationServlet</servlet-name>
        <servlet-class>com.deal.servlet.paginationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>paginationServlet</servlet-name>
        <url-pattern>/paginationServlet</url-pattern>
    </servlet-mapping>
    <!---->
    <!--Yomna-->
    <servlet>
        <servlet-name>LogInControl</servlet-name>
        <servlet-class>com.deal.servlet.LogInControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogInControl</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterControl</servlet-name>
        <servlet-class>com.deal.servlet.RegisterControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterControl</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <!---->
    <!--Sobky-->
    <servlet>
        <servlet-name>ProductControl</servlet-name>
        <servlet-class>com.deal.servlet.ProductControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductControl</servlet-name>
        <url-pattern>/ProductControl</url-pattern>
    </servlet-mapping>
    <!---->
</web-app>
